{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@ecom/database": ["libs/database/src"],
      "@ecom/database/*": ["libs/database/src/*"],
      "@ecom/logger": ["libs/logger/src"],
      "@ecom/logger/*": ["libs/logger/src/*"],
      "@ecom/rmq": ["libs/rmq/src"],
      "@ecom/rmq/*": ["libs/rmq/src/*"],
      "@ecom/authn": ["libs/authn/src"],
      "@ecom/authn/*": ["libs/authn/src/*"],
      "@ecom/common": ["libs/common/src"],
      "@ecom/common/*": ["libs/common/src/*"]
    }
  }
}
