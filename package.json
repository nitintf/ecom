{
  "name": "ecom",
  "version": "0.0.1",
  "description": "E-commerce microservices using nestjs",
  "author": "Nitin Panwar <nitinpanwar0802@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/auth/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/auth/test/jest-e2e.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@nest-lab/throttler-storage-redis": "^1.1.0",
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/common": "^11.0.10",
    "@nestjs/core": "^11.0.10",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.0.10",
    "@nestjs/platform-fastify": "^11.0.10",
    "@nestjs/platform-socket.io": "^11.0.10",
    "@nestjs/swagger": "^11.0.4",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.0.10",
    "@sentry/node": "^9.1.0",
    "@sentry/tracing": "^7.120.3",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "argon2": "^0.41.1",
    "cache-manager": "^6.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie": "^1.0.2",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "helmet": "^8.0.0",
    "nestjs-graceful-shutdown": "^1.0.3",
    "nestjs-i18n": "^10.5.0",
    "nestjs-pino": "^4.3.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^14.2.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "swagger-stats": "^0.99.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.20.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "11.0.10",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.20.1",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.24.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@ecom/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@ecom/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@ecom/rmq(|/.*)$": "<rootDir>/libs/rmq/src/$1",
      "^@ecom/authn(|/.*)$": "<rootDir>/libs/authn/src/$1"
    }
  }
}